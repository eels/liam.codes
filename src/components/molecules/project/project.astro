---
import * as Classes from './styled';
import ConditionalRender from '@src/components/utilities/conditional-render.astro';
import UnderlinedText from '@src/components/atoms/underlined-text/underlined-text.astro';
import { Icon } from 'astro-icon/components';

export interface Props {
  description: string;
  href: string;
  icon: string;
  name: string;
  source?: string;
}

const { description, href, icon, name, source } = Astro.props;
---

<div class:list={Classes.Header()}>
  <Icon class:list='w-10 h-10' name={icon} />
  <h3 class:list={Classes.Headline()}>
    <UnderlinedText href={href}>{name}</UnderlinedText>
  </h3>
</div>
<div class:list={Classes.Description()}>{description}</div>
<ConditionalRender condition={source !== undefined}>
  <UnderlinedText class:list={Classes.SourceLink()} href={source}>
    View source on Github
  </UnderlinedText>
</ConditionalRender>
